package edu.shop.tacos.model;

import javax.validation.constraints.Digits;
import javax.validation.constraints.NotBlank;

import org.hibernate.validator.constraints.CreditCardNumber;

import lombok.Data;

@Data
public class Order {

	@NotBlank(message="The name is required")
	private String name;
	
	@NotBlank(message="The street is required")
	private String street;
	
	@NotBlank(message="The city is required")
	private String city;
	
	@NotBlank(message="The state is required")
	private String state;
	
	@NotBlank(message="The zip is required")
	private String zip;
	
	@CreditCardNumber(message="Not a valid ccNumber")
	private String ccNumber;
	
	@NotBlank(message="The ccExpiration is required")
	private String ccExpiration;
	
	@Digits(integer = 3, fraction = 4 ,message="Not a valid ccCVV")
	private String ccCVV;
	
}
